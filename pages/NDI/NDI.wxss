/* pages/NDI/NDI.wxss */
.page{
  background-color: white;
}
.page__hd{
  margin-bottom: 15rpx;
}
.radio-group{
  border-bottom: 1px solid #ddd;
}
.radio{
  font-size: 30rpx;
  display: block;
  border-top: 1px solid #ddd;
  padding: 5px;
  margin-bottom: 5rpx;
}

.mweui-cells__title {
  margin-top: 5rpx;
  margin-bottom: 0.3em;
  color: rgb(8, 20, 18);
  font-size: 16px;
}
.mweui-textarea {
  display: block;
  width: 100%;
  height: 200rpx;
  background-color: #ecfcef;
}

.mweui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  background-color: #fff;
}
.mweui-textarea-counter {
  color: #f0f0f0;
  text-align: right;
}

.mweui-btn {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: #c00;
  margin-top: 40px;
  margin-bottom: 40px;
}
.tijiao{
  margin-top: 25rpx;
  width: 55%;
  display: felx;
  height: 50rpx;
}