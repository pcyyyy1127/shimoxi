.nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  justify-content: center;
}

.navCtn {
  width: 90%;
  margin: 0 auto;
}

.nav-item {
  width: 120px;
  height: 81px;
  float: left;
  text-align: center;
  margin: 20px;
  border-radius: 8px;
  font-size: 12px;
  background-color: #dfecfc;
  color: #789ac6;
  box-shadow: 0px 0px 5px 0px#8fb7eb;
}

.nav-img {
  margin-top: 15px;
  margin-bottom: 8px;
}

.hr {
  height: 15px;
  background-color: #cccccc;
  margin-top: 15px;
  opacity: 0.2;
}

.head {
  display: flex;
  flex-direction: row;
  margin: unset;
  padding: 10px 0px;
  font-size: 13px;
  background-color: #F9F9F9;
}

.right {
  position: absolute;
  right: 10px;
  color: #789ac6;
}

.head_title {
  color: #33373D;
  font-size: 16px;
}

.circle_view {
  margin-left: 10px;
  position: relative;
  width: 20px;
}

.circle {
  margin-top: 5px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #9db9de;
  display: inline-block;
}

.circle_orange {
  background-color: #FFBA6E;
  position: absolute;
  left: 6px;
}

.list {
  padding: 0px 10px;
  background: #F9F9F9;
}

.list-img {
  width: 90px;
  height: 90px;
  margin: 15px 0px 0px 10px;
  border-radius: 5px;
}

.item {
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
  background-color: white;
  border-radius: 2px;
}

.desc {
  margin-left: 10px;
  line-height: 30px;
}

.title {
  font-weight: normal;
  margin-top: 15px;
}

.list-content {
  padding: 0px 5px 0px 0px;
  display: -webkit-box;
  font-size: 28rpx;
  color: #000000;
  line-height: 40rpx;
  height: 120rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.count {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
}

.type {
  display: -webkit-box;
  color: #9db9de;
  width:70px;
  line-height: 30px;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.count_right {
  position: absolute;
  right: 0px;
  font-size: 12px;
}

.liulan {
  margin-right: 10px;
  display: inline-block;
}

.pinglun {
  margin-right: 15px;
  display: inline-block;
}

.swiper {
  height: 450rpx;
  width: 100%;
}

.swiper-image {
  height: 450rpx;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}