.author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle; 
}
.date{
  margin-left: 20rpx;
  margin-bottom: 5px;
  font-size: 40rpx; 
  display: flex; /*设置显示样式**/
  align-items: center; /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction: row;
}
.title{
  font-size:30rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 20px;
}
.image{
  margin-left: 16px;
  width: 100%;
  height: 200px;
  margin: auto 0;
  margin-top: 10px;
  margin-bottom: 10px;
}
.article-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  margin-left: 40rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.article-images{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.article-text{
  vertical-align: middle;
